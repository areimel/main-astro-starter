---

const {name, description, link} = Astro.props;
---

<div class="Card">
	<h2>{name}</h2>
	<p class="description">
		{description}
	</p>
	<div class="linkSection">
		<a href={link}>LEARN MORE</a>
	</div>
</div>



<style lang="scss">
	
	.Card{
		width: 100%;
		max-width:350px;
		//flex:1;
		align-self: stretch;
		border: var(--border-settings-main);
		box-shadow: var(--shadow-1);
		padding: 1rem;
		padding-bottom: 100px;
		margin: 1rem;
		position: relative;
		h2{
			margin: 0;
			padding-bottom: 0.5rem;
			text-align: center;
			text-wrap: balance;
			border-bottom: var(--border-settings-main);
		}
		.tagline{
			margin-top: 0.5rem;
			font-weight: 800;
		}
		.description{
			margin-top: 1em;
		}
		.linkSection{
			text-align: center;
			position: absolute;
			bottom: 0;
			left: 50%;
			transform: translateX(-50%);
			width: 100%;
			padding: 1rem;
			a{
				background-color: var(--black);
				color: var(--white);
				padding: 0.5em 1em;
				text-decoration: none;
				display: block;
				margin-bottom: 1em;
				&:hover{
					text-decoration: underline;
					text-decoration-style: dotted;
				}
			}
		}
		
	}
</style>